#!/usr/bin/env bash

# Make sure ansible and openssh exists
sudo pacman -S --needed ansible openssh --noconfirm 

# make sure .ssh exists
mkdir -p $HOME/.ssh

# Decrypt the private SSH key file to the .ssh dir
ansible-vault decrypt $HOME/.dotfiles/.ssh/id_ed25519 --output $HOME/ssh/id_ed25519
ansible-vault decrypt $HOME/.dotfiles/.ssh/id_ed25519.pub --output $HOME/ssh/id_ed25519.pub
